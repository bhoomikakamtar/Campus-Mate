{
  "name": "Student",
  "type": "object",
  "properties": {
    "student_name": { "type": "string", "description": "Full name of the student" },
    "student_id": { "type": "string", "description": "Unique student ID/Roll number" },
    "college_id": { "type": "string", "description": "Related college ID" },
    "parent_name": { "type": "string", "description": "Parent/Guardian name" },
    "parent_phone": { "type": "string", "description": "Parent contact number" },
    "parent_email": { "type": "string", "format": "email", "description": "Parent email address" },
    "course": { "type": "string", "description": "Course/Program enrolled in" },
    "year": { "type": "string", "description": "Current year/semester" },
    "academic_year": { "type": "string", "description": "Academic year (e.g., 2024-2025)" },
    "date_of_birth": { "type": "string", "format": "date", "description": "Student's date of birth" },
    "address": { "type": "string", "description": "Residential address" },
    "admission_date": { "type": "string", "format": "date", "description": "Date of admission" },
    "status": { "type": "string", "enum": ["active","inactive","graduated","suspended"], "default": "active" },
    "notes": { "type": "string", "description": "Additional notes" }
  },
  "required": ["student_name","college_id"]
}
